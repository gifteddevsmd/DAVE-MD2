{
  "name": "Dave-md",
  "description": "simple nodejs bot by Dave",
  "logo": "https://files.catbox.moe/60lx1p.jpg",
  "keywords": [],
  "repository": "https://github.com/gifteddevsmd/DAVE-MD2",
  "stack": "container",
  "addons": [
    {
      "plan": "heroku-postgresql"
    }
  ],
  "scripts": {
    "start": "node --expose-gc --max-old-space-size=280 --optimize-for-size --gc-interval=100 index.js"
  },
"env": {
  "SESSION_ID": {
    "description": "Must begin with 'DAVE-AI:~'.",
    "value": "",
    "required": true
  }
},  
  "formation": {
    "worker": {
      "quantity": 1,
      "size": "standard-2x"
    }
  },
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    },
    {
      "url": "https://github.com/DuckyTeam/heroku-buildpack-imagemagick.git"
    },
    {
      "url": "https://github.com/jonathanong/heroku-buildpack-ffmpeg-latest"
    },
    {
      "url": "https://github.com/clhuang/heroku-buildpack-webp-binaries.git"
    }
  ]
}