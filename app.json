{
  "name": "Dvae-Md",
  "description": "aaah take and fix it",
  "logo": "https://files.catbox.moe/60lx1p.jpg",
  "keywords": ["whatsapp", "bot", "gift-md", "baileys", "whatsapp-bot"],
  "repository": "https://github.com/gifteddevsmd/DAVE-MD2",
  "stack": "container",

  "addons": [
    {
      "plan": "heroku-postgresql"
    }
  ],

  "scripts": {
    "start": "node --expose-gc --max-old-space-size=280 --optimize-for-size --gc-interval=100 index.js"
  },

  "env": {
    "SESSION_ID": {
      "description": "Session id (must begin with 'DAVE-AI:~'). from the bot web.",
      "value": "",
      "required": true
    },
    "OWNER_NUMBER": {
      "description": "Bot owner's WhatsApp number (with country code, no + or spaces). Example: 254104260236",
      "value": "",
      "required": true
    },
    "BOT_NAME": {
      "description": "Your bot's display name",
      "value": "Dave Md",
      "required": false
    },
    "PREFIX": {
      "description": "Command prefix (default: .)",
      "value": ".",
      "required": false
    },
    "PACKNAME": {
      "description": "Sticker pack name",
      "value": "Dave Tech",
      "required": false
    },
    "BOT_OWNER": {
      "description": "Your name/username",
      "value": "Dave Tech",
      "required": false
    },
    "MODE": {
      "description": "Bot mode: 'public' or 'private'",
      "value": "public",
      "required": false
    }
  },

  "formation": {
    "worker": {
      "quantity": 1,
      "size": "standard-2x"
    }
  },

  "buildpacks": [
    {
      "url": "heroku/nodejs"
    },
    {
      "url": "https://github.com/DuckyTeam/heroku-buildpack-imagemagick.git"
    },
    {
      "url": "https://github.com/jonathanong/heroku-buildpack-ffmpeg-latest"
    },
    {
      "url": "https://github.com/clhuang/heroku-buildpack-webp-binaries.git"
    }
  ]
}