{
  "name": "Dave-X",
  "description": "Simple Whatsapp bot by Dave",
  "logo": "https://files.catbox.moe/60lx1p.jpg",
  "keywords": ["whatsapp-bot", "nodejs", "baileys"],
  "repository": "https://github.com/gifteddevsmd/DAVE-MD2",
  "stack": "container",

  "addons": [
    {
      "plan": "heroku-postgresql"
    }
  ],

  "env": {
    "SESSION_ID": {
      "description": "Your pairing session ID (must begin with 'DAVE-AI:~'). Get it from the pairing site.",
      "value": "",
      "required": true
    },
    "PAIR_NUMBER": {
      "description": "Bot owner's WhatsApp number (with country code, no + or spaces). Example: 254104260236",
      "value": "",
      "required": true
    }
  },

  "formation": {
    "worker": {
      "quantity": 1,
      "size": "basic"
    }
  },

  "buildpacks": [
    {
      "url": "heroku/nodejs"
    },
    {
      "url": "https://github.com/DuckyTeam/heroku-buildpack-imagemagick.git"
    },
    {
      "url": "https://github.com/jonathanong/heroku-buildpack-ffmpeg-latest"
    },
    {
      "url": "https://github.com/clhuang/heroku-buildpack-webp-binaries.git"
    }
  ]
}